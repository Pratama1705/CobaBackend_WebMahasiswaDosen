{{#if message}}
  <div class="alert {{messageClass}}" role="alert">
    {{message}}
  </div>
{{/if}}

<form method="POST" action="/change-password">
  <div class="form-group">
    <label for="exampleInputPassword1">New Password</label>
    <input name="newPass" type="password" class="form-control" id="exampleInputPassword1" placeholder="New Password" />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Confirm New Password</label>
    <input name="confirmPass" type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm New Password" />
  </div>
  <button type="submit" class="btn btn-primary">Change</button>
</form>